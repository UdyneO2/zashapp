<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- CONNECTION STATUS CARD DENGAN SWITCH -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="?attr/colorSurfaceVariant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connection_status"
                    android:textSize="14sp"
                    android:textColor="?android:textColorSecondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <View
                        android:id="@+id/status_indicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/circle_status"
                        android:backgroundTint="@color/status_disconnected" />

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/status_disconnected"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:textColorPrimary" />

                    <TextView
                        android:id="@+id/status_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="14sp"
                        android:textColor="?android:textColorSecondary"
                        android:layout_marginEnd="16dp" />

                    <!-- SWITCH UNTUK CONNECT/DISCONNECT -->
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_connection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="?attr/colorPrimary"
                        app:trackTint="?attr/colorPrimaryVariant" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- QUICK CONNECT CHIPS -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:singleLine="true"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_localhost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="127.0.0.1:9090"
                app:checkedIconVisible="false"
                style="@style/Widget.Material3.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                app:checkedIconVisible="false"
                app:chipIcon="@android:drawable/ic_input_add"
                app:chipIconTint="?attr/colorPrimary"
                app:chipIconVisible="true"
                style="@style/Widget.Material3.Chip.Assist" />

        </com.google.android.material.chip.ChipGroup>

        <!-- SERVER CONFIGURATION CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="?attr/colorSurfaceVariant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/server_config"
                    android:textSize="14sp"
                    android:textColor="?android:textColorSecondary"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:placeholderText="@string/server_host_hint"
                    app:startIconDrawable="@android:drawable/ic_dialog_info"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_hostname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hostname"
                        android:text="127.0.0.1" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:placeholderText="@string/server_port_hint"
                    app:startIconDrawable="@android:drawable/ic_menu_manage"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_port"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/port"
                        android:text="9090"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:passwordToggleEnabled="true"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_secret"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/secret"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- TOMBOL OPEN BROWSER (TETAP) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_browser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/open_browser"
                    android:enabled="false"
                    app:icon="@android:drawable/ic_menu_view"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- PROGRESS BAR -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:indeterminateTint="?attr/colorPrimary"
            style="?android:attr/progressBarStyleLarge" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
